<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3b5998"
        android:id="@+id/detail_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:clickable="false"
        android:focusable="false"
        app:title=" "
        android:focusableInTouchMode="false"
        tools:context=".Activity_Main"
        android:layout_gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Book Detail"
            android:id="@+id/add_book"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffffff" />


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/book_name_d"
        android:gravity="center"
        android:hint="Book&apos;s Name"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/author_name_d"
        android:gravity="center"
        android:hint="Author&apos;s Name"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/isbn_d"
        android:gravity="center"
        android:hint="ISBN"
        android:layout_margin="5dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="EDIT DETAILS"
        android:id="@+id/edit"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ff59deff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="DELETE THIS BOOK"
        android:id="@+id/delete"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff25b41"
        android:layout_marginTop="10dp" />





</LinearLayout>
