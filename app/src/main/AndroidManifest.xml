<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rohit.task" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Activities.AddBook"
            android:label="@string/title_activity_add_book" >
        </activity>
        <activity
            android:name=".Activities.Activities.ShowBooks"
            android:label="@string/title_activity_show_books" >
        </activity>
        <activity
            android:name=".Activities.Activities.BookDetail"
            android:label="@string/title_activity_book_detail" >
        </activity>
        <activity
            android:name=".Activities.Activities.EditDetails"
            android:label="@string/title_activity_edit_details" >
        </activity>
    </application>

</manifest>
